{
  "restartable": "rs",
  "watch": [
    "lib/**/*.js",
    "views/**/*.html",
    "views/**/*.hbs",
    "test/**/*.js",
    "package.json",
    ".eslintrc",
    "nodemon.json",
    "lib/**/*.json",
    "Makefile"
  ],
  "verbose": true,
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  }
}
